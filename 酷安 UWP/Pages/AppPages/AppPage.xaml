<Page
    x:Class="CoolapkUWP.Pages.AppPages.AppPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls" 
    xmlns:control="using:CoolapkUWP.Control"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Grid>
        <ScrollViewer>
            <StackPanel>
                <Border Height="70"/>
                <Grid>
                    <Image 
                        x:Name="AppIconImage" 
                        x:FieldModifier="Public" 
                        HorizontalAlignment="Left" 
                        Height="60" Margin="20" 
                        VerticalAlignment="Top" Width="60"/>
                    <StackPanel Margin="100,10,0,0">
                        <TextBlock 
                            x:Name="AppTitleText" 
                            x:FieldModifier="Public" 
                            FontSize="20" HorizontalAlignment="Left" 
                            TextWrapping="Wrap" VerticalAlignment="Top" 
                            Padding="0,0,0,5"/>
                        <TextBlock 
                            x:Name="AppVText" 
                            x:FieldModifier="Public" 
                            Text="" HorizontalAlignment="Left" 
                            TextWrapping="Wrap" VerticalAlignment="Top" 
                            Foreground="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}" Padding="0,0,0,5"/>
                        <TextBlock 
                            x:Name="AppMText" 
                            x:FieldModifier="Public" 
                            Text="" HorizontalAlignment="Left" 
                            TextWrapping="Wrap" VerticalAlignment="Top" 
                            Foreground="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}" />
                    </StackPanel>
                </Grid>
                <Grid  Padding="10" Height="50">
                    <TextBlock 
                        x:Name="AppXText" 
                        x:FieldModifier="Public" 
                        Text="" HorizontalAlignment="Left" 
                        TextWrapping="Wrap" VerticalAlignment="Center" 
                        Foreground="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}"/>
                    <Button 
                        x:Name="DownloadButton" 
                        Style="{StaticResource ButtonRevealStyle}" 
                        Click="DownloadButton_Click" Content="下载" 
                        HorizontalAlignment="Right" VerticalAlignment="Top"
                        Width="78" BorderThickness="0" 
                        Background="{ThemeResource SystemControlHighlightListAccentHighBrush}" Visibility="Collapsed"/>
                </Grid>
                <Grid Visibility="Collapsed" Margin="0,1,0,0" x:Name="DPanel" Padding="10" >
                    <TextBlock 
                        x:Name="AppDText" 
                        x:FieldModifier="Public" 
                        TextWrapping="Wrap" 
                        Text="" TextAlignment="Center"  
                        VerticalAlignment="Top"/>
                </Grid>

                <!--大按钮-->
                <Button 
                    x:Name="UPanel" 
                    Style="{StaticResource ButtonRevealStyle}" 
                    Background="#504CAF50" BorderThickness="0"  
                    HorizontalContentAlignment="Stretch" 
                    HorizontalAlignment="Stretch">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock 
                                x:Name="AppV2Text" 
                                x:FieldModifier="Public" 
                                Text="" Margin="10" 
                                TextWrapping="Wrap" VerticalAlignment="Top"  />
                            <TextBlock 
                                x:Name="AppVTText" 
                                x:FieldModifier="Public" 
                                Text="" Margin="10" 
                                TextWrapping="Wrap" VerticalAlignment="Top" 
                                Foreground="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}"/>
                        </StackPanel>
                        <TextBlock 
                            x:Name="AppVMText" 
                            x:FieldModifier="Public" 
                            Text="" Margin="10" 
                            TextWrapping="Wrap" VerticalAlignment="Top" />
                    </StackPanel>
                </Button>
                <ListBox 
                    x:Name="ScreenShotView" Height="150" 
                    SelectionChanged="ScreenShotView_SelectionChanged" 
                    ScrollViewer.VerticalScrollBarVisibility="Disabled" 
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    BorderBrush="{ThemeResource SystemControlBackgroundListMediumRevealBorderBrush}">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
                <Grid Height="auto" Padding="10" >
                    <TextBlock 
                        x:Name="AppJText"
                        x:FieldModifier="Public"
                        Text="简介"
                        TextWrapping="Wrap" 
                        VerticalAlignment="Top" />
                </Grid>

                <!--<p class="rank_num">-->
                <Grid Height="auto" Padding="10"  Margin="0,10">
                    <TextBlock 
                        x:Name="AppRText"
                        x:FieldModifier="Public"
                        Text="5.0" />
                    <StackPanel 
                        Orientation="Horizontal" 
                        Margin="40,0" 
                        VerticalAlignment="Top" 
                        HorizontalAlignment="Left">
                        <muxc:RatingControl 
                            x:Name="AppRating" 
                            IsReadOnly="True"
                            PlaceholderValue="0" 
                            Margin="0,-3,0,0" />
                    </StackPanel>
                    <TextBlock 
                        x:Name="AppPText" 
                        x:FieldModifier="Public" 
                        Text="共0人评分" 
                        Margin="0,30,0,0" />
                </Grid>
                <Grid x:Name="KPanel" Padding="10" >
                    <Image 
                        x:Name="AppKImage" 
                        x:FieldModifier="Public" 
                        HorizontalAlignment="Left" 
                        Height="60" Margin="5" 
                        VerticalAlignment="Top" Width="60" />
                    <TextBlock 
                        x:Name="AppKNText" 
                        x:FieldModifier="Public" 
                        Text="" Margin="70,0,0,0" 
                        FontSize="20" VerticalAlignment="Center" 
                        HorizontalAlignment="Left"/>
                </Grid>

            </StackPanel>
        </ScrollViewer>

        <!--顶栏-->
        <control:TitleBar x:Name="titleBar" BackButtonClick="BackButton_Click"/>
        <StackPanel 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top"
                Orientation="Horizontal"
                Margin="0,30,0,0">
            <Button 
                    Width="48" Height="48"
                    Style="{StaticResource ButtonStyle1}"
                    ToolTipService.ToolTip="更多">
                <SymbolIcon Symbol="More" />
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="访问网页" Click="GotoUri_Click" Icon="Globe"/>
                        <MenuFlyoutItem Text="举报" Click="Report_Click" Icon="ReportHacked"/>
                        <MenuFlyoutSubItem Text="复制" Icon="Copy">
                            <MenuFlyoutItem Text="简介" Click="CopyM_Click" Tag="0" Icon="List"/>
                            <MenuFlyoutItem Text="点评" Click="CopyM_Click" Tag="1" Icon="Edit"/>
                            <MenuFlyoutItem Text="包名" Click="CopyM_Click" Tag="2" Icon="Shop"/>
                            <MenuFlyoutItem Text="版本号" Click="CopyM_Click" Tag="3" Icon="OpenWith"/>
                            <MenuFlyoutItem Text="更新日志" Click="CopyM_Click" Tag="4" Icon="Flag"/>
                        </MenuFlyoutSubItem>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>
        </StackPanel>

        <!--缩略图显示-->
        <FlipView Visibility="Collapsed" x:Name="ScreenShotFlipView" Margin="0,72,0,0"/>
        <Rectangle 
            x:Name="CloseBlock"
            Margin="0,72,0,0" 
            Width="40" Height="40"
            Visibility="Collapsed"
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"
            Fill="{ThemeResource SystemControlChromeHighAcrylicElementMediumBrush}"/>
        <Button 
            x:Name="CloseFlip" 
            Style="{StaticResource ButtonRevealStyle}" 
            Margin="0,72,0,0"
            Width="40" Height="40"
            Visibility="Collapsed" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top">
            <SymbolIcon Symbol="Cancel"/>
        </Button>
    </Grid>
</Page>
