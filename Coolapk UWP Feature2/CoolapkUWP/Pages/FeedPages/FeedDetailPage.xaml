<Page
    x:Class="CoolapkUWP.Pages.FeedPages.FeedDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Windows10version1809="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract, 7)"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:control="using:CoolapkUWP.Control"
    xmlns:viewModel="using:CoolapkUWP.Control.ViewModels"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:muxm="using:Microsoft.UI.Xaml.Media"
    mc:Ignorable="d"
      SizeChanged="Page_SizeChanged">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <control:DatatemplatesDictionary/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid x:Name="MainGrid">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <controls:PullToRefreshListView
            x:Name="MainListView"
            SelectionMode="None"
            PullToRefreshLabel="下拉刷新"
            ReleaseToRefreshLabel="松手刷新"
            RefreshRequested="{x:Bind Refresh}">
            <controls:PullToRefreshListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </controls:PullToRefreshListView.ItemContainerStyle>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="LeftColumnDefinition" Width="*"/>
                    <ColumnDefinition x:Name="RightColumnDefinition" Width="0"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <controls:PullToRefreshListView
                    x:Name="detailList"
                    SelectionMode="None"
                    ScrollViewer.VerticalScrollMode="Disabled"
                    PullToRefreshLabel="下拉刷新"
                    ReleaseToRefreshLabel="松手刷新"
                    Height="{x:Bind detailListHeight,Mode=OneWay}"
                    RefreshRequested="{x:Bind RefreshFeed}">
                    <controls:PullToRefreshListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </controls:PullToRefreshListView.ItemContainerStyle>
                    <Grid
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <ListViewItem
                            Tag="{x:Bind FeedDetail.turl,Mode=OneWay}"
                            Tapped="StackPanel_Tapped"
                            Background="{ThemeResource SystemControlBackgroundListLowBrush}"
                            x:Name="TTitle"
                            x:Load="{x:Bind FeedDetail.showTtitle,Mode=OneWay}"
                            HorizontalContentAlignment="Stretch">
                            <Grid HorizontalAlignment="Stretch">
                                <Border
                                    Width="32"
                                    Height="32"
                                    CornerRadius="4"
                                    HorizontalAlignment="Left">
                                    <Image
                                        Source="{x:Bind FeedDetail.tpic,Mode=OneWay}" />
                                </Border>
                                <TextBlock
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    Text="{x:Bind FeedDetail.ttitle,Mode=OneWay}"
                                    Margin="40,0,0,0"/>
                                <SymbolIcon
                                    Symbol="Forward"
                                    HorizontalAlignment="Right"/>
                            </Grid>
                        </ListViewItem>
                        <ListViewItem
                            Grid.Row="1"
                            Tag="{x:Bind FeedDetail.dyhUrl,Mode=OneWay}"
                            Tapped="StackPanel_Tapped"
                            Background="{ThemeResource SystemControlBackgroundListLowBrush}"
                            x:Name="dyhN"
                            x:Load="{x:Bind FeedDetail.show_dyh_name,Mode=OneWay}"
                            HorizontalContentAlignment="Stretch">
                            <Grid HorizontalAlignment="Stretch">
                                <TextBlock
                                    HorizontalAlignment="Left"
                                    Text="{x:Bind FeedDetail.dyh_name,Mode=OneWay}"
                                    Margin="23,0,0,0"/>
                                <SymbolIcon
                                    Symbol="Forward"
                                    HorizontalAlignment="Right"/>
                            </Grid>
                        </ListViewItem>
                        <Grid
                            Margin="0,3"
                            Grid.Row="2"
                            CornerRadius="0,0,8,8"
                            x:Name="feedArticleTitle"
                            x:Load="{x:Bind FeedDetail.isFeedArticle,Mode=OneWay}">
                            <Image
                                x:Name="messageCover"
                                x:Load="{x:Bind FeedDetail.has_message_cover,Mode=OneWay}"
                                Tapped="Image_Tapped"
                                Tag="{x:Bind FeedDetail.message_cover_url,Mode=OneWay}"
                                Source="{x:Bind FeedDetail.message_cover,Mode=OneWay}"
                                Stretch="UniformToFill" />
                            <Border VerticalAlignment="Bottom">
                                <Border.Background>
                                    <muxm:AcrylicBrush
                                        BackgroundSource="Backdrop"
                                        TintColor="#55000000"
                                        FallbackColor="#55000000"
                                        TintOpacity="0.6"/>
                                </Border.Background>
                                <TextBlock
                                    Margin="8"
                                    Text="{x:Bind FeedDetail.message_title,Mode=OneWay}"
                                    Foreground="White"
                                    FontWeight="Black"
                                    TextWrapping="Wrap"
                                    FontSize="20"/>
                            </Border>
                        </Grid>
                        <ListViewItem
                            Background="{ThemeResource SystemControlBackgroundListLowBrush}"
                            Grid.Row="2"
                            x:Name="gotoQues"
                            x:Load="{x:Bind FeedDetail.isAnswerFeed,Mode=OneWay}"
                            Tapped="StackPanel_Tapped"
                            Tag="{x:Bind FeedDetail.questionUrl,Mode=OneWay}"
                            HorizontalContentAlignment="Stretch">
                            <Grid VerticalAlignment="Stretch">
                                <StackPanel
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <TextBlock>查看全部</TextBlock>
                                    <TextBlock Text="{x:Bind FeedDetail.questionAnswerNum,Mode=OneWay}"/>
                                    <TextBlock>个回答</TextBlock>
                                </StackPanel>
                                <SymbolIcon
                                    Symbol="Forward"
                                    HorizontalAlignment="Right"/>
                            </Grid>
                        </ListViewItem>
                        <StackPanel
                            Grid.Row="3"
                            Orientation="Horizontal">
                            <Button
                                Click="Button_Click"
                                Style="{StaticResource ButtonRevealStyle}"
                                Tag="{x:Bind FeedDetail.uurl,Mode=OneWay}"
                                Background="{x:Null}"
                                Padding="0"
                                Margin="8">
                                <Ellipse
                                    Width="36"
                                    Height="36"
                                    HorizontalAlignment="Left">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="{x:Bind FeedDetail.userSmallAvatar,Mode=OneWay}"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                            </Button>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock
                                    Text="{x:Bind FeedDetail.username,Mode=OneWay}"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Text="{x:Bind FeedDetail.dateline,Mode=OneWay}"
                                        Foreground="Gray"/>
                                    <TextBlock
                                        Text="{x:Bind FeedDetail.info,Mode=OneWay}"
                                        Foreground="Gray"
                                        Margin="5,0,0,0"/>
                                    <TextBlock
                                        Text="{x:Bind FeedDetail.device_title,Mode=OneWay}"
                                        Foreground="Gray"
                                        Margin="5,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        <control:MTextBlock
                            Tag="{x:Bind FeedDetail.feedArticlePics,Mode=OneWay}"
                            Grid.Row="4"
                            Margin="10,2"
                            x:Name="feedArticlePresenter"
                            x:Load="{x:Bind FeedDetail.isFeedArticle,Mode=OneWay}"
                            MessageText="{x:Bind FeedDetail.message_raw_output,Mode=OneWay}"/>
                        <Grid
                            Grid.Row="4"
                            Margin="10,2"
                            x:Name="feedPresenter"
                            x:Load="{x:Bind FeedDetail.isFeedArticle2,Mode=OneWay}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <control:MTextBlock MessageText="{x:Bind FeedDetail.message,Mode=OneWay}"/>
                            <GridView
                                ScrollViewer.VerticalScrollMode="Disabled"
                                x:Name="picA"
                                x:Load="{x:Bind FeedDetail.showPicArr,Mode=OneWay}"
                                Grid.Row="1"
                                MinHeight="0"
                                Padding="0"
                                Margin="0,5,0,0"
                                HorizontalContentAlignment="Left"
                                SelectionChanged="GridView_SelectionChanged"
                                Tag="{x:Bind FeedDetail.pics,Mode=OneWay}"
                                ItemsSource="{x:Bind FeedDetail.picArr,Mode=OneWay}">
                                <GridView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <ItemsWrapGrid
                                            MaximumRowsOrColumns="3"
                                            Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </GridView.ItemsPanel>
                                <GridView.ItemTemplate>
                                    <DataTemplate x:DataType="viewModel:ImageData">
                                        <Grid
                                            Windows10version1809:CornerRadius="8"
                                            BorderThickness="1"
                                            BorderBrush="{ThemeResource SystemControlBackgroundBaseLowRevealBorderBrush}">
                                            <Image
                                                MaxHeight="102"
                                                MaxWidth="102"
                                                MinHeight="0"
                                                MinWidth="0"
                                                Source="{x:Bind Pic}"
                                                Stretch="UniformToFill"/>
                                            <StackPanel
                                                Orientation="Horizontal"
                                                VerticalAlignment="Bottom"
                                                HorizontalAlignment="Left">
                                                <Border
                                                    x:Name="gif"
                                                    x:Load="{x:Bind IsGif}"
                                                    Windows10version1809:CornerRadius="0,8,0,0"
                                                    Background="{ThemeResource SystemControlBackgroundAccentBrush}">
                                                    <TextBlock
                                                        Text="GIF"
                                                        Margin="2,0"/>
                                                </Border>
                                            </StackPanel>
                                            <StackPanel
                                                Orientation="Horizontal"
                                                VerticalAlignment="Bottom"
                                                HorizontalAlignment="Right">
                                                <Border
                                                    x:Name="longPic"
                                                    x:Load="{x:Bind IsLongPic}"
                                                    Windows10version1809:CornerRadius="8,0,0,0"
                                                    Background="{ThemeResource SystemControlBackgroundAccentBrush}">
                                                    <TextBlock
                                                        Text="长图"
                                                        Margin="2,0"/>
                                                </Border>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                            </GridView>
                        </Grid>
                        <Grid
                            Grid.Row="5"
                            Padding="10,0"
                            Margin="-10,0"
                            x:Name="sourceF"
                            x:Load="{x:Bind FeedDetail.showSourceFeedGrid,Mode=OneWay}"
                            Background="{ThemeResource SystemControlBackgroundListLowBrush}">
                            <TextBlock
                                x:Name="sourceF2"
                                x:Load="{x:Bind FeedDetail.showSourceFeed2,Mode=OneWay}"
                                Margin="15">
                                抱歉，该转发已被删除。
                            </TextBlock>
                            <Grid
                                x:Name="sourceFG"
                                x:Load="{x:Bind FeedDetail.showSourceFeed,Mode=OneWay}">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <StackPanel Orientation="Horizontal">
                                    <Button
                                        Padding="2"
                                        Margin="0,0,5,0"
                                        Style="{StaticResource ButtonStyle1}"
                                        Content="{x:Bind FeedDetail.sourceFeed.username,Mode=OneWay}"
                                        Click="Button_Click" Tag="{x:Bind FeedDetail.sourceFeed.uurl,Mode=OneWay}"
                                        Background="{x:Null}"/>
                                    <TextBlock
                                        Margin="5,0"
                                        Text="{x:Bind FeedDetail.sourceFeed.dateline,Mode=OneWay}"
                                        Foreground="Gray"
                                        VerticalAlignment="Center"/>
                                </StackPanel>
                                <Grid
                                    Grid.Row="1"
                                    Tag="{x:Bind FeedDetail.sourceFeed.url,Mode=OneWay}"
                                    Tapped="Grid_Tapped"
                                    Margin="3">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        FontSize="16"
                                        x:Name="sourceMT"
                                        x:Load="{x:Bind FeedDetail.sourceFeed.showMessage_title,Mode=OneWay}"
                                        FontWeight="Black"
                                        TextWrapping="Wrap"
                                        Text="{x:Bind FeedDetail.sourceFeed.message_title,Mode=OneWay}"/>
                                    <control:MTextBlock
                                        Grid.Row="1"
                                        MessageText="{x:Bind FeedDetail.sourceFeed.message,Mode=OneWay}"/>
                                    <GridView
                                        ScrollViewer.VerticalScrollMode="Disabled"
                                        x:Name="sourcePic"
                                        Grid.Row="2"
                                        HorizontalContentAlignment="Left"
                                        MinHeight="0"
                                        Padding="0"
                                        Margin="0,5,0,0"
                                        x:Load="{x:Bind FeedDetail.showPicArr,Mode=OneWay}"
                                        Tag="{x:Bind FeedDetail.sourceFeed.pics,Mode=OneWay}"
                                        ItemsSource="{x:Bind FeedDetail.sourceFeed.picArr,Mode=OneWay}">
                                        <GridView.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <ItemsWrapGrid
                                                    MaximumRowsOrColumns="3"
                                                    Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </GridView.ItemsPanel>
                                        <GridView.ItemTemplate>
                                            <DataTemplate x:DataType="viewModel:ImageData">
                                                <Grid
                                                    Windows10version1809:CornerRadius="8"
                                                    BorderThickness="1"
                                                    BorderBrush="{ThemeResource SystemControlBackgroundBaseLowRevealBorderBrush}">
                                                    <Image
                                                        MaxHeight="102"
                                                        MaxWidth="102"
                                                        MinHeight="0"
                                                        MinWidth="0"
                                                        Source="{x:Bind Pic}"
                                                        Stretch="UniformToFill"/>
                                                    <StackPanel
                                                        Orientation="Horizontal"
                                                        VerticalAlignment="Bottom"
                                                        HorizontalAlignment="Left">
                                                        <Border
                                                            x:Name="gif"
                                                            x:Load="{x:Bind IsGif}"
                                                            Windows10version1809:CornerRadius="0,8,0,0"
                                                            Background="{ThemeResource SystemControlBackgroundAccentBrush}">
                                                            <TextBlock
                                                                Text="GIF"
                                                                Margin="2,0"/>
                                                        </Border>
                                                    </StackPanel>
                                                    <StackPanel
                                                        Orientation="Horizontal"
                                                        VerticalAlignment="Bottom"
                                                        HorizontalAlignment="Right">
                                                        <Border
                                                            x:Name="longPic"
                                                            x:Load="{x:Bind IsLongPic}"
                                                            Windows10version1809:CornerRadius="8,0,0,0"
                                                            Background="{ThemeResource SystemControlBackgroundAccentBrush}">
                                                            <TextBlock
                                                                Text="长图"
                                                                Margin="2,0"/>
                                                        </Border>
                                                    </StackPanel>
                                                </Grid>
                                            </DataTemplate>
                                        </GridView.ItemTemplate>
                                    </GridView>
                                </Grid>
                            </Grid>
                        </Grid>
                        <Grid
                            Grid.Row="6"
                            Tapped="StackPanel_Tapped"
                            Tag="{x:Bind FeedDetail.extra_url,Mode=OneWay}"
                            Background="{ThemeResource SystemControlBackgroundListLowBrush}"
                            x:Name="extraT"
                            x:Load="{x:Bind FeedDetail.showExtra_url,Mode=OneWay}"
                            Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border
                                Background="{ThemeResource SystemControlBackgroundAccentBrush}">
                                <Image
                                    Width="50"
                                    Height="50"
                                    Source="{x:Bind FeedDetail.extra_pic,Mode=OneWay}" />
                            </Border>
                            <StackPanel
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Stretch"
                                Margin="5">
                                <TextBlock
                                    Text="{x:Bind FeedDetail.extra_title,Mode=OneWay}"
                                    TextWrapping="Wrap"/>
                                <TextBlock
                                    Text="{x:Bind FeedDetail.extra_url2,Mode=OneWay}"
                                    Foreground="Gray"
                                    TextWrapping="Wrap"/>
                            </StackPanel>
                        </Grid>
                        <ListView
                            Grid.Row="7"
                            ScrollViewer.VerticalScrollMode="Disabled"
                            HorizontalContentAlignment="Stretch"
                            Style="{StaticResource ListViewStyle1}"
                            x:Name="relaRLis"
                            x:Load="{x:Bind FeedDetail.showRelationRows,Mode=OneWay}"
                            ItemsSource="{x:Bind FeedDetail.relationRows,Mode=OneWay}">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="viewModel:RelationRowsItem">
                                    <StackPanel
                                        Padding="6"
                                        Tag="{x:Bind url}"
                                        Tapped="StackPanel_Tapped"
                                        Orientation="Horizontal"
                                        Background="{ThemeResource SystemControlBackgroundListLowBrush}">
                                        <Image
                                            Width="20"
                                            Height="20"
                                            Source="{x:Bind logo,Mode=OneWay}"/>
                                        <TextBlock
                                            Text="{x:Bind title}"
                                            Margin="3,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <StackPanel
                            Grid.Row="8"
                            x:Name="questionDetail"
                            x:Load="{x:Bind FeedDetail.isQuestionFeed,Mode=OneWay}"
                            Orientation="Horizontal"
                            Margin="8,0">
                            <StackPanel
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                                <TextBlock Text="{x:Bind FeedDetail.question_answer_num,Mode=OneWay}"/>
                                <TextBlock>人回答·</TextBlock>
                                <TextBlock Text="{x:Bind FeedDetail.question_follow_num,Mode=OneWay}"/>
                                <TextBlock Margin="0,0,5,0">人关注</TextBlock>
                            </StackPanel>
                            <ComboBox Margin="6,0" SelectedIndex="0" SelectionChanged="ComboBox_SelectionChanged">
                                <ComboBoxItem>热度排序</ComboBoxItem>
                                <ComboBoxItem>点赞排序</ComboBoxItem>
                                <ComboBoxItem>时间排序</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                    </Grid>
                </controls:PullToRefreshListView>
                <controls:PullToRefreshListView
                    Grid.Row="1"
                    Margin="-12,0"
                    x:Name="RightSideListView"
                    SelectionMode="None"
                    ScrollViewer.VerticalScrollMode="Disabled"
                    PullToRefreshLabel="下拉刷新"
                    ReleaseToRefreshLabel="松手刷新"
                    Height="{x:Bind detailListHeight,Mode=OneWay}"
                    RefreshRequested="{x:Bind Refresh}">
                    <controls:PullToRefreshListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </controls:PullToRefreshListView.ItemContainerStyle>
                    <Pivot
                        x:Load="False"
                        Padding="0,-48,0,0"
                        IsLocked="True"
                        x:Name="FeedDetailPivot"
                        SelectionChanged="FeedDetailPivot_SelectionChanged">
                        <Pivot.ItemContainerStyle>
                            <Style TargetType="PivotItem">
                                <Setter Property="Padding" Value="0"/>
                            </Style>
                        </Pivot.ItemContainerStyle>
                        <PivotItem>
                            <StackPanel>
                                <ListViewItem
                                    Style="{StaticResource NoPaddingListViewItem}"
                                    x:Name="ChangeHotReplysDisplayModeListViewItem"
                                    Template="{StaticResource ListViewItemTemplate1}"
                                    BorderBrush="{ThemeResource SystemControlBackgroundListLowRevealBorderBrush}"
                                    BorderThickness="1"
                                    Tapped="ChangeHotReplysDisplayModeListViewItem_Tapped">
                                    <StackPanel
                                        Orientation="Horizontal"
                                        Margin="12,0">
                                        <TextBlock
                                            x:Name="iconText"
                                            VerticalAlignment="Center"
                                            FontFamily="Segoe MDL2 Assets"
                                            Text=""/>
                                        <TextBlock
                                            Margin="12,0"
                                            VerticalAlignment="Center">
                                            热门回复
                                        </TextBlock>
                                    </StackPanel>
                                </ListViewItem>
                                <ListView
                                    SelectionMode="None"
                                    BorderBrush="{ThemeResource SystemControlBackgroundListLowRevealBorderBrush}"
                                    ItemsSource="{x:Bind hotReplies}"
                                    BorderThickness="1"
                                    ItemTemplate="{StaticResource feed_reply}"
                                    ScrollViewer.VerticalScrollMode="Disabled"
                                    x:Name="hotReplyListView">
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="Template" Value="{StaticResource ListViewItemTemplate1}"/>
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                    <ListView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <control:GridPanel
                                                CubeInSameHeight="False"
                                                DesiredColumnWidth="384.0"/>
                                        </ItemsPanelTemplate>
                                    </ListView.ItemsPanel>
                                </ListView>
                                <ListViewItem
                                    BorderBrush="{ThemeResource SystemControlBackgroundListLowRevealBorderBrush}"
                                    BorderThickness="1"
                                    Template="{StaticResource ListViewItemTemplate1}"
                                    x:Name="GetMoreHotReplyListViewItem"
                                    Tapped="GetMoreHotReplyListViewItem_Tapped">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                                        加载更多热门回复
                                    </TextBlock>
                                </ListViewItem>

                                <ListView
                                    SelectionMode="None"
                                    Margin="0,8"
                                    ItemTemplate="{StaticResource feed_reply}"
                                    ScrollViewer.VerticalScrollMode="Disabled"
                                    ItemsSource="{x:Bind replies}">
                                    <ListView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <control:GridPanel
                                                CubeInSameHeight="False"
                                                DesiredColumnWidth="384.0"/>
                                        </ItemsPanelTemplate>
                                    </ListView.ItemsPanel>
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="Template" Value="{StaticResource ListViewItemTemplate1}"/>
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                </ListView>
                            </StackPanel>
                        </PivotItem>
                        <PivotItem>
                            <ListView
                                SelectionMode="None"
                                ScrollViewer.VerticalScrollMode="Disabled"
                                ItemsSource="{x:Bind likes}">
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <control:GridPanel
                                            CubeInSameHeight="False"
                                            DesiredColumnWidth="200"/>
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter
                                            Property="Template"
                                            Value="{StaticResource ListViewItemTemplate1}"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="viewModel:UserViewModel">
                                        <ListViewItem
                                            Style="{StaticResource NoPaddingListViewItem}"
                                            BorderBrush="{ThemeResource SystemControlBackgroundListLowRevealBorderBrush}"
                                            BorderThickness="1"
                                            HorizontalContentAlignment="Stretch"
                                            VerticalContentAlignment="Stretch"
                                            Tapped="StackPanel_Tapped"
                                            Template="{StaticResource ListViewItemTemplate1}"
                                            Tag="{x:Bind url}">
                                            <StackPanel
                                                Orientation="Horizontal"
                                                Padding="3"
                                                VerticalAlignment="Center">
                                                <Ellipse
                                                    Width="30"
                                                    Height="30"
                                                    HorizontalAlignment="Left">
                                                    <Ellipse.Fill>
                                                        <ImageBrush ImageSource="{x:Bind UserAvatar}"/>
                                                    </Ellipse.Fill>
                                                </Ellipse>
                                                <TextBlock
                                                    Margin="5,0"
                                                    Text="{x:Bind UserName}"
                                                    VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </ListViewItem>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </PivotItem>
                        <PivotItem>
                            <ListView
                                SelectionMode="None"
                                ScrollViewer.VerticalScrollMode="Disabled" >
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <control:GridPanel
                                            CubeInSameHeight="False"
                                            DesiredColumnWidth="384.0"/>
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Template" Value="{StaticResource ListViewItemTemplate1}"/>
                                    </Style>
                                </ListView.ItemContainerStyle>

                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="viewModel:SourceFeedViewModel">
                                        <ListViewItem
                                            Style="{StaticResource NoPaddingListViewItem}"
                                            BorderBrush="{ThemeResource SystemControlBackgroundListLowRevealBorderBrush}"
                                            BorderThickness="0,1"
                                            HorizontalContentAlignment="Stretch"
                                            VerticalContentAlignment="Stretch"
                                            Template="{StaticResource ListViewItemTemplate1}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="auto"/>
                                                </Grid.RowDefinitions>
                                                <StackPanel
                                                    HorizontalAlignment="Left"
                                                    Orientation="Horizontal">
                                                    <Button
                                                        Style="{StaticResource ButtonStyle1}"
                                                        Padding="2"
                                                        Tag="{x:Bind uurl}"
                                                        Margin="4,0"
                                                        Content="{x:Bind username}"
                                                        VerticalAlignment="Center"/>
                                                    <TextBlock
                                                        Text="{x:Bind dateline}"
                                                        Foreground="Gray"
                                                        VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <control:MTextBlock
                                                    Tag="{x:Bind url}"
                                                    Tapped="Grid_Tapped"
                                                    Grid.Row="1"
                                                    MessageText="{x:Bind message}"
                                                    Margin="8,0,10,10"/>
                                            </Grid>
                                        </ListViewItem>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </PivotItem>
                    </Pivot>
                    <ListView
                        x:Name="AnswersListView"
                        x:Load="False"
                        ScrollViewer.VerticalScrollMode="Disabled"
                        Style="{StaticResource ListViewStyle}"
                        ItemsSource="{x:Bind answers}"
                        ItemTemplate="{StaticResource feed}">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <control:GridPanel
                                    CubeInSameHeight="False"
                                    DesiredColumnWidth="384.0"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Template" Value="{StaticResource ListViewItemTemplate1}"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </controls:PullToRefreshListView>
            </Grid>
        </controls:PullToRefreshListView>
        <StackPanel
            x:Name="PivotItemPanel"
            Orientation="Horizontal"
            VerticalAlignment="Bottom"
            Background="{ThemeResource SystemControlChromeMediumLowAcrylicElementMediumBrush}"
            Padding="8,0">
            <Button Style="{StaticResource ButtonStyle1}">
                写回复
                <Button.Flyout>
                    <Flyout Opened="Flyout_Opened">
                        <Flyout.FlyoutPresenterStyle>
                            <Style TargetType="FlyoutPresenter">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="ScrollViewer.VerticalScrollMode" Value="Disabled"/>
                                <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Disabled"/>
                                <Setter Property="ScrollViewer.HorizontalScrollMode" Value="Disabled"/>
                                <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
                                <Setter Property="MinWidth" Value="300"/>
                                <Setter Property="MinHeight" Value="300"/>
                            </Style>
                        </Flyout.FlyoutPresenterStyle>
                        <Frame x:Name="replyFlyoutFrame"/>
                    </Flyout>
                </Button.Flyout>
            </Button>
            <Button
                Style="{StaticResource ButtonStyle1}"
                Click="Button_Click"
                Tag="MakeLike">
                点赞
            </Button>
            <AppBarSeparator />
            <Button
                BorderBrush="{ThemeResource SystemControlBackgroundAccentBrush}"
                Style="{StaticResource ButtonStyle1}"
                Click="Button_Click"
                Tag="reply"
                x:Name="ToReplyPivotItemButton"
                BorderThickness="0,0,0,2">
                <StackPanel Orientation="Horizontal">
                    <SymbolIcon Symbol="Comment"/>
                    <TextBlock
                        Margin="3,0"
                        Text="{x:Bind FeedDetail.replynum,Mode=OneWay}"/>
                </StackPanel>
            </Button>
            <Button
                BorderBrush="{ThemeResource SystemControlBackgroundAccentBrush}"
                BorderThickness="0"
                Style="{StaticResource ButtonStyle1}"
                Click="Button_Click"
                Tag="like"
                x:Name="ToLikePivotItemButton">
                <StackPanel Orientation="Horizontal">
                    <SymbolIcon Symbol="Like"/>
                    <TextBlock
                        Margin="3,0"
                        Text="{x:Bind FeedDetail.likenum,Mode=OneWay}"/>
                </StackPanel>
            </Button>
            <Button
                BorderBrush="{ThemeResource SystemControlBackgroundAccentBrush}"
                BorderThickness="0"
                Style="{StaticResource ButtonStyle1}"
                Click="Button_Click"
                Tag="share"
                x:Name="ToSharePivotItemButton">
                <StackPanel Orientation="Horizontal">
                    <SymbolIcon Symbol="Share"/>
                    <TextBlock
                        Margin="3,0"
                        Text="{x:Bind FeedDetail.share_num,Mode=OneWay}"/>
                </StackPanel>
            </Button>
        </StackPanel>
        <control:TitleBar
            x:Name="TitleBar"
            RefreshEvent="{x:Bind Refresh}"
            RefreshButtonVisibility="Visible"
            BackButtonClick="BackButton_Click"
            ComboBoxItemsSource="{x:Bind comboBoxItems}"
            ComboBoxSelectionChange="ChangeFeedSortingComboBox_SelectionChanged">
            <control:TitleBar.RightAreaContent>
                <Button
                    Style="{StaticResource IconButtonStyle}"
                    ToolTipService.ToolTip="分享链接">
                    <Button.Flyout>
                        <Flyout>
                            <Flyout.FlyoutPresenterStyle>
                                <Style TargetType="FlyoutPresenter">
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="ScrollViewer.VerticalScrollMode" Value="Disabled" />
                                    <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Disabled" />
                                    <Setter Property="ScrollViewer.HorizontalScrollMode" Value="Disabled" />
                                    <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
                                </Style>
                            </Flyout.FlyoutPresenterStyle>
                            <control:ShowQRCodeControl x:Name="showQRCodeControl" />
                        </Flyout>
                    </Button.Flyout>
                    <FontIcon
                        FontFamily="Segoe MDL2 Assets"
                        Glyph="&#xED14;" />
                </Button>
            </control:TitleBar.RightAreaContent>
        </control:TitleBar>
    </Grid>
</Page>
