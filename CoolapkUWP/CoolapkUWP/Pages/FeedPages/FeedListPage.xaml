                                        FontSize="12"
                                        IsChecked="{Binding IsChecked, ElementName=OnlyOwnerButton, Converter={StaticResource BoolNegationConverter}, Mode=TwoWay}" />
                                    <ToggleButton
                                        x:Name="OnlyOwnerButton"
                                        x:Uid="/FeedListPage/OnlyOwnerButton"
                                        Grid.Column="0"
                                        Padding="4,2"
                                        contract7NotPresent:Loaded="Button_Loaded"
                                        contract7Present:CornerRadius="{Binding Source={ThemeResource ControlCornerRadius}, Converter={StaticResource LeftCornerRadiusFilterConverter}}"
