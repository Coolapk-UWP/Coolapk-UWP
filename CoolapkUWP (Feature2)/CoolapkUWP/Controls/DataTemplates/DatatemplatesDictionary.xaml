<ResourceDictionary
    x:Class="CoolapkUWP.Control.DatatemplatesDictionary"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Windows10version1809="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract, 7)"
    xmlns:control="using:CoolapkUWP.Control"
    xmlns:models="using:CoolapkUWP.Control.ViewModels"
    xmlns:converter="using:CoolapkUWP.Data.ValueConverters"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls">
    <Style
        TargetType="Button"
        x:Key="FeedOpButtonStyle"
        BasedOn="{StaticResource ButtonRevealStyle}">
        <Setter Property="Height" Value="34"/>
        <Setter Property="Grid.Row" Value="10"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>

    <converter:NoPicToNullConverter x:Key="NoPicToNullConverter"/>

    <DataTemplate x:Key="null"/>
    
    <DataTemplate x:DataType="models:FeedViewModel" x:Key="feed">
        <Grid
            Padding="12,4"
            MaxWidth="800"
            BorderThickness="1"
            BorderBrush="{ThemeResource SystemControlBackgroundListLowRevealBorderBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            
            <StackPanel
                x:Name="StickUp"
                Orientation="Horizontal"
                x:Load="{x:Bind isStickTop}">
                <SymbolIcon
                    Symbol="Upload"
                    Foreground="Red"/>
                <TextBlock
                    Text="置顶"
                    Margin="10"
                    Foreground="Red"/>
            </StackPanel>
            
            <StackPanel
                Grid.Row="1"
                x:Name="userb"
                Orientation="Horizontal"
                x:Load="{x:Bind showUser}">
                <Button
                    Padding="0"
                    Margin="0,4"
                    Tapped="OnTapped"
                    Tag="{x:Bind uurl}"
                    Background="Transparent"
                    Style="{StaticResource ButtonRevealStyle}">
                    <winui:PersonPicture
                        Width="36"
                        Height="36"
                        DisplayName="{x:Bind username}"
                        ProfilePicture="{x:Bind userSmallAvatar, Mode=OneWay, Converter={StaticResource NoPicToNullConverter}}"/>
                </Button>
                <StackPanel
                    Margin="8,0"
                    VerticalAlignment="Center">
                    <TextBlock
                        Tapped="OnTapped"
                        Tag="{x:Bind uurl}"
                        VerticalAlignment="Top"
                        Text="{x:Bind username}"
                        HorizontalAlignment="Left"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,5,0"
                            Tapped="OnTapped"
                            Tag="{x:Bind url}"
                            Foreground="Gray"
                            x:Name="datelineTxb"
                            Text="{x:Bind dateline}"
                            x:Load="{x:Bind showDateline}"/>
                        <TextBlock
                            Tapped="OnTapped"
                            Tag="{x:Bind url}"
                            Foreground="Gray"
                            Text="{x:Bind info}"/>
                        <TextBlock
                            Margin="5,0,0,0"
                            Foreground="Gray"
                            Text="{x:Bind device_title}"/>
                        <TextBlock
                            Margin="5,0,0,0"
                            Foreground="Gray"
                            Text="{x:Bind ChangeTitle}"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            
            <StackPanel
                Grid.Row="1"
                x:Name="dyhb"
                Orientation="Horizontal"
                x:Load="{x:Bind showUser2}">
                <Button
                    x:Name="dyhlogo"
                    Tapped="OnTapped"
                    Tag="{x:Bind dyhurl}"
                    x:Load="{x:Bind showDyh}"
                    Background="Transparent"
                    Style="{StaticResource ButtonStyle1}">
                    <winui:PersonPicture
                        Width="40"
                        Height="40"
                        HorizontalAlignment="Left"
                        DisplayName="{x:Bind dyhname}"
                        ProfilePicture="{x:Bind dyhlogo, Mode=OneWay, Converter={StaticResource NoPicToNullConverter}}"/>
                </Button>
                <StackPanel
                    Margin="2,0"
                    VerticalAlignment="Center">
                    <TextBlock
                        Tapped="OnTapped"
                        x:Name="dyhnamesta"
                        Tag="{x:Bind dyhurl}"
                        Text="{x:Bind dyhname}"
                        VerticalAlignment="Top"
                        x:Load="{x:Bind showDyh}"
                        HorizontalAlignment="Left"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Tapped="OnTapped"
                            Tag="{x:Bind url}"
                            Foreground="Gray"
                            Text="{x:Bind dateline}"/>
                        <TextBlock
                            Margin="5,0,0,0"
                            Tapped="OnTapped"
                            x:Name="fromInfot"
                            Foreground="Gray"
                            Tag="{x:Bind uurl}"
                            Text="{x:Bind fromInfo}"
                            x:Load="{x:Bind showFromInfo}"/>
                        <TextBlock
                            Margin="5,0,0,0"
                            Foreground="Gray"
                            Text="{x:Bind ChangeTitle}"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            
            <TextBlock
                Margin="4"
                Grid.Row="2"
                FontSize="16"
                x:Name="mTitleT"
                Tapped="OnTapped"
                Tag="{x:Bind url}"
                FontWeight="Black"
                TextWrapping="Wrap"
                Text="{x:Bind message_title}"
                x:Load="{x:Bind showMessage_title}"/>

            <control:MTextBlock
                Margin="4"
                Grid.Row="3"
                Tapped="OnTapped"
                Tag="{x:Bind url}"
                MessageText="{x:Bind message}"/>
            
            <GridView
                Padding="0"
                Name="picA"
                Grid.Row="4"
                MinHeight="0"
                Margin="4,8,4,4"
                Tag="{x:Bind pics}"
                Tapped="PicA_Tapped"
                x:Load="{x:Bind showPicArr}"
                ItemsSource="{x:Bind picArr}"
                HorizontalContentAlignment="Left"
                ScrollViewer.VerticalScrollMode="Disabled">
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid
                            MaximumRowsOrColumns="3"
                            Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
                
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="models:ImageData">
                        <Grid
                            Width="102"
                            Height="102"
                            CornerRadius="8"
                            BorderThickness="1"
                            BorderBrush="{ThemeResource SystemControlBackgroundBaseLowRevealBorderBrush}">
                            <Grid.Background>
                                <ImageBrush
                                    Stretch="UniformToFill"
                                    ImageSource="{x:Bind Pic}"/>
                            </Grid.Background>
                            
                            <StackPanel
                                Orientation="Horizontal"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Left">
                                <Border
                                    x:Name="gif"
                                    CornerRadius="0,8,0,0"
                                    x:Load="{x:Bind IsGif}"
                                    Background="{ThemeResource SystemControlBackgroundAccentBrush}">
                                    <TextBlock
                                        Text="GIF"
                                        Margin="2,0"/>
                                </Border>
                            </StackPanel>
                            
                            <StackPanel
                                Orientation="Horizontal"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Right">
                                <Border
                                    x:Name="longPic"
                                    CornerRadius="8,0,0,0"
                                    x:Load="{x:Bind IsLongPic}"
                                    Background="{ThemeResource SystemControlBackgroundAccentBrush}">
                                    <TextBlock
                                        Text="长图"
                                        Margin="2,0"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
            
            <Grid
                Margin="4"
                Grid.Row="5"
                Padding="10,0"
                x:Name="sourceF"
                CornerRadius="8"
                BorderThickness="1"
                x:Load="{x:Bind showSourceFeedGrid}"
                Background="{ThemeResource SystemControlBackgroundListLowBrush}"
                BorderBrush="{ThemeResource SystemControlBackgroundListLowRevealBorderBrush}">
                <TextBlock
                    Margin="15"
                    x:Name="sourceF2"
                    Text="抱歉，该转发已被删除。"
                    x:Load="{x:Bind showSourceFeed2}"/>
                
                <Grid
                    x:Name="sourceFG"
                    x:Load="{x:Bind showSourceFeed}">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel
                        Grid.Row="0"
                        Orientation="Horizontal">
                        <Button
                            Padding="2"
                            Margin="0,0,5,0"
                            Tapped="OnTapped"
                            Background="Transparent"
                            Tag="{x:Bind sourceFeed.uurl}"
                            Content="{x:Bind sourceFeed.username}"
                            Style="{StaticResource ButtonRevealStyle}"/>
                        <TextBlock
                            Margin="5,0"
                            Foreground="Gray"
                            VerticalAlignment="Center"
                            Text="{x:Bind sourceFeed.dateline}"/>
                    </StackPanel>
                    
                    <TextBlock
                        Margin="4"
                        Grid.Row="1"
                        FontSize="16"
                        x:Name="sourceMT"
                        Tapped="OnTapped"
                        FontWeight="Black"
                        TextWrapping="Wrap"
                        Tag="{x:Bind sourceFeed.url}"
                        Text="{x:Bind sourceFeed.message_title}"
                        x:Load="{x:Bind sourceFeed.showMessage_title}"/>
                    
                    <control:MTextBlock
                        Margin="4"
                        Grid.Row="2"
                        Tapped="OnTapped"
                        Tag="{x:Bind sourceFeed.url}"
                        MessageText="{x:Bind sourceFeed.message}"/>
                    
                    <GridView
                        Padding="0"
                        Grid.Row="3"
                        MinHeight="0"
                        Margin="4,8,4,4"
                        x:Name="sourcePic"
                        Tapped="PicA_Tapped"
                        Tag="{x:Bind sourceFeed.pics}"
                        HorizontalContentAlignment="Left"
                        x:Load="{x:Bind sourceFeed.showPicArr}"
                        ItemsSource="{x:Bind sourceFeed.picArr}"
                        ScrollViewer.VerticalScrollMode="Disabled">
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsWrapGrid
                                    MaximumRowsOrColumns="3"
                                    Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                        
                        <GridView.ItemTemplate>
                            <DataTemplate x:DataType="models:ImageData">
                                <Grid
                                    Width="102"
                                    Height="102"
                                    CornerRadius="8"
                                    BorderThickness="1"
                                    BorderBrush="{ThemeResource SystemControlBackgroundBaseLowRevealBorderBrush}">
                                    <Grid.Background>
                                        <ImageBrush
                                            Stretch="UniformToFill"
                                            ImageSource="{x:Bind Pic}"/>
                                    </Grid.Background>
                                    
                                    <StackPanel
                                        Orientation="Horizontal"
                                        VerticalAlignment="Bottom"
                                        HorizontalAlignment="Left">
                                        <Border
                                            x:Name="gif"
                                            CornerRadius="0,8,0,0"
                                            x:Load="{x:Bind IsGif}"
                                            Background="{ThemeResource SystemControlBackgroundAccentBrush}">
                                            <TextBlock
                                                Text="GIF"
                                                Margin="2,0"/>
                                        </Border>
                                    </StackPanel>
                                    
                                    <StackPanel
                                        Orientation="Horizontal"
                                        VerticalAlignment="Bottom"
                                        HorizontalAlignment="Right">
                                        <Border
                                            x:Name="longPic"
                                            CornerRadius="8,0,0,0"
                                            x:Load="{x:Bind IsLongPic}"
                                            Background="{ThemeResource SystemControlBackgroundAccentBrush}">
                                            <TextBlock
                                                Text="长图"
                                                Margin="2,0"/>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </Grid>
            </Grid>
            
            <Grid
                Margin="0,4"
                Grid.Row="6"
                x:Name="extraT"
                CornerRadius="8"
                Tapped="OnTapped"
                Tag="{x:Bind extra_url}"
                x:Load="{x:Bind showExtra_url}"
                Background="{ThemeResource SystemControlBackgroundListLowBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Border
                    Width="50"
                    Height="50"
                    Margin="4,4,0,4"
                    CornerRadius="8">
                    <Border.Background>
                        <ImageBrush
                            ImageSource="{x:Bind extra_pic, Mode=OneWay}"
                            Stretch="UniformToFill"/>
                    </Border.Background>
                </Border>

                <StackPanel
                    Margin="4"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Stretch">
                    <TextBlock
                        TextWrapping="Wrap"
                        Text="{x:Bind extra_title}"/>
                    <TextBlock
                        Foreground="Gray"
                        TextWrapping="Wrap"
                        Text="{x:Bind extra_url2}"/>
                </StackPanel>
            </Grid>
            
            <Border Grid.Row="7"/>

            <StackPanel
                Grid.Row="8"
                Margin="0,0,5,0"
                x:Name="questionDetail"
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                x:Load="{x:Bind isQuestionFeed}">
                <TextBlock
                    Foreground="Gray"
                    Text="{x:Bind question_answer_num}"/>
                <TextBlock
                    Text="人回答·"
                    Foreground="Gray"/>
                <TextBlock
                    Foreground="Gray"
                    Text="{x:Bind question_follow_num}"/>
                <TextBlock
                    Text="人关注"
                    Foreground="Gray"/>
            </StackPanel>
            
            <ListView
                Grid.Row="9"
                x:Name="relaRLis"
                Margin="-11,2,0,0"
                x:Load="{x:Bind showRelationRows}"
                ItemsSource="{x:Bind relationRows}"
                HorizontalContentAlignment="Stretch"
                Style="{StaticResource ListViewStyle1}"
                ScrollViewer.VerticalScrollMode="Disabled">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:RelationRowsItem">
                        <StackPanel
                            Padding="6"
                            CornerRadius="4"
                            Tapped="OnTapped"
                            Tag="{x:Bind url}"
                            BorderThickness="1"
                            Orientation="Horizontal"
                            Background="{ThemeResource SystemControlBackgroundListLowBrush}"
                            BorderBrush="{ThemeResource SystemControlBackgroundListLowRevealBorderBrush}">
                            <Border
                                Width="20"
                                Height="20"
                                CornerRadius="2">
                                <Border.Background>
                                    <ImageBrush ImageSource="{x:Bind logo, Mode=OneWay}"/>
                                </Border.Background>
                            </Border>
                            <TextBlock
                                Margin="4,0,0,0"
                                Text="{x:Bind title}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
            <ListView
                Grid.Row="10"
                x:Name="repRL"
                BorderThickness="1"
                IsItemClickEnabled="True"
                ItemClick="repRL_ItemClick"
                x:Load="{x:Bind showReplyRows}"
                ItemsSource="{x:Bind replyRows}"
                Windows10version1809:CornerRadius="8"
                Style="{StaticResource ListViewStyle}"
                ScrollViewer.VerticalScrollMode="Disabled"
                Background="{ThemeResource SystemControlBackgroundListLowBrush}"
                BorderBrush="{ThemeResource SystemControlBackgroundListLowRevealBorderBrush}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter
                            Property="HorizontalContentAlignment"
                            Value="Stretch"/>
                        <Setter
                            Property="Style"
                            Value="{StaticResource NoPaddingListViewItem}"/>
                        <Setter
                            Property="Template"
                            Value="{StaticResource ListViewItemTemplate1}"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:ReplyRowsItem">
                        <StackPanel Tag="{x:Bind id}">
                            <Border
                                Margin="0,0"
                                HorizontalAlignment="Left"
                                Windows10version1809:CornerRadius="8,0,8,0"
                                Background="{ThemeResource SystemControlHighlightListAccentHighBrush}">
                                <TextBlock
                                    Margin="2,1"
                                    Text="{x:Bind extraFlag}" />
                            </Border>
                            <control:MTextBlock
                                Margin="5"
                                MessageText="{x:Bind message}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
            <StackPanel
                x:Name="lik"
                Grid.Row="11"
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                x:Load="{x:Bind showLikes}">
                <Button
                    Padding="8,0"
                    Tag="{x:Bind}"
                    x:Name="likeButton"
                    Click="FeedButton_Click"
                    HorizontalAlignment="Center"
                    ToolTipService.ToolTip="点赞"
                    Style="{StaticResource FeedOpButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon
                            Symbol="Like"
                            x:Name="like2"
                            x:Load="{x:Bind liked2}"/>
                        <SymbolIcon
                            Symbol="Like"
                            x:Name="like1"
                            x:Load="{x:Bind Liked}"
                            Foreground="{ThemeResource SystemControlBackgroundAccentBrush}"/>
                        <TextBlock
                            Margin="3,0"
                            Text="{x:Bind Likenum,Mode=OneWay}"/>
                    </StackPanel>
                </Button>
                <Button
                    Padding="8,0"
                    Tag="{x:Bind EntityId}"
                    HorizontalAlignment="Center"
                    ToolTipService.ToolTip="回复"
                    Style="{StaticResource FeedOpButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Symbol="Comment"/>
                        <TextBlock
                            Margin="3,0"
                            Text="{x:Bind replynum}"/>
                    </StackPanel>
                    <Button.Flyout>
                        <Flyout Opened="Flyout_Opened">
                            <Flyout.FlyoutPresenterStyle>
                                <Style TargetType="FlyoutPresenter">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="MinWidth" Value="300"/>
                                    <Setter Property="MinHeight" Value="200"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="ScrollViewer.VerticalScrollMode" Value="Disabled"/>
                                    <Setter Property="ScrollViewer.HorizontalScrollMode" Value="Disabled"/>
                                    <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Disabled"/>
                                    <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
                                </Style>
                            </Flyout.FlyoutPresenterStyle>
                            <Frame x:Name="replyFlyoutFrame"/>
                        </Flyout>
                    </Button.Flyout>
                </Button>
                <Button
                    Padding="8,0"
                    x:Name="shareButton"
                    Tag="{x:Bind shareurl}"
                    Click="FeedButton_Click"
                    HorizontalAlignment="Center"
                    ToolTipService.ToolTip="分享"
                    Style="{StaticResource FeedOpButtonStyle}">
                    <StackPanel
                        Orientation="Horizontal">
                        <SymbolIcon
                            Symbol="Share"/>
                        <TextBlock
                            Margin="3,0"
                            Text="{x:Bind share_num}"/>
                    </StackPanel>
                    <Button.Flyout>
                        <Flyout Opened="QRCode_Opened">
                            <Flyout.FlyoutPresenterStyle>
                                <Style TargetType="FlyoutPresenter">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="ScrollViewer.VerticalScrollMode" Value="Disabled"/>
                                    <Setter Property="ScrollViewer.HorizontalScrollMode" Value="Disabled"/>
                                    <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Disabled"/>
                                    <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
                                </Style>
                            </Flyout.FlyoutPresenterStyle>
                        </Flyout>
                    </Button.Flyout>
                </Button>
            </StackPanel>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="feed_reply" x:DataType="models:FeedReplyViewModel">
        <Grid
            Padding="4,0,4,4"
            BorderThickness="1"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            BorderBrush="{ThemeResource SystemControlBackgroundListLowRevealBorderBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Button
                Padding="0"
                Margin="4,6,8,0"
                Grid.RowSpan="4"
                Tapped="OnTapped"
                Tag="{x:Bind Uurl}"
                VerticalAlignment="Top"
                Background="Transparent"
                HorizontalAlignment="Center"
                Style="{StaticResource ButtonRevealStyle}">
                <winui:PersonPicture
                    Width="36"
                    Height="36"
                    DisplayName="{x:Bind Username}"
                    ProfilePicture="{x:Bind UserSmallAvatar, Mode=OneWay, Converter={StaticResource NoPicToNullConverter}}"/>
            </Button>
            
            <StackPanel
                Grid.Column="1"
                VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <Button
                        Padding="0"
                        Margin="0,4"
                        Tapped="OnTapped"
                        Tag="{x:Bind Uurl}"
                        Background="Transparent"
                        Content="{x:Bind Username}"
                        Style="{StaticResource ButtonRevealStyle}"/>
                    <Border
                        x:Name="isAu"
                        CornerRadius="4"
                        VerticalAlignment="Center"
                        x:Load="{x:Bind IsFeedAuthor}"
                        Background="{ThemeResource SystemControlHighlightListAccentHighBrush}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter
                                    Value="5,1"
                                    Property="Margin"/>
                            </Style>
                        </Border.Style>
                        <TextBlock
                            Text="楼主"
                            Margin="2,1"
                            FontSize="12"/>
                    </Border>
                </StackPanel>
                <StackPanel
                    Padding="0,-5,0,0"
                    Orientation="Horizontal">
                    <TextBlock
                        Foreground="Gray"
                        Text="{x:Bind Dateline}"
                        VerticalAlignment="Center"/>
                    <TextBlock
                        Text="@"
                        x:Name="At"
                        Foreground="Gray"
                        VerticalAlignment="Center"
                        x:Load="{x:Bind ShowReplyUser}"/>
                    <Button
                        Padding="0"
                        x:Name="Ruser"
                        Tapped="OnTapped"
                        Tag="{x:Bind ReplyUrl}"
                        Background="Transparent"
                        x:Load="{x:Bind ShowReplyUser}"
                        Content="{x:Bind ReplyUsername}"
                        Style="{StaticResource ButtonRevealStyle}"/>
                </StackPanel>
            </StackPanel>
            
            <Grid
                Grid.Row="1"
                Grid.Column="1"
                Margin="0,4,8,4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                
                <control:MTextBlock MessageText="{x:Bind Message}"/>
                
                <Grid
                    Width="102"
                    Height="102"
                    x:Name="pic"
                    Grid.Row="1"
                    Margin="0,4"
                    CornerRadius="8"
                    BorderThickness="1"
                    Tapped="Image_Tapped"
                    Tag="{x:Bind PicUrl}"
                    x:Load="{x:Bind ShowPic}"
                    HorizontalAlignment="Left"
                    BorderBrush="{ThemeResource SystemControlBackgroundBaseLowRevealBorderBrush}">
                    <Grid.Background>
                        <ImageBrush
                            Stretch="UniformToFill"
                            ImageSource="{x:Bind Pic.Pic,Mode=OneWay}"/>
                    </Grid.Background>
                    
                    <StackPanel
                        Orientation="Horizontal"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Left">
                        <Border
                            x:Name="gif"
                            CornerRadius="0,8,0,0"
                            x:Load="{x:Bind Pic.IsGif}"
                            Background="{ThemeResource SystemControlBackgroundAccentBrush}">
                            <TextBlock
                                Text="GIF"
                                Margin="2,0"/>
                        </Border>
                    </StackPanel>
                    
                    <StackPanel
                        Orientation="Horizontal"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Right">
                        <Border
                            x:Name="longPic"
                            CornerRadius="8,0,0,0"
                            x:Load="{x:Bind Pic.IsLongPic}"
                            Background="{ThemeResource SystemControlBackgroundAccentBrush}">
                            <TextBlock
                                Text="长图"
                                Margin="2,0"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>

            <StackPanel
                Grid.Row="2"
                Grid.Column="1"
                Orientation="Horizontal"
                HorizontalAlignment="Left">
                <Button
                    Padding="8,0"
                    Tag="{x:Bind}"
                    x:Name="likeButton"
                    Click="FeedButton_Click"
                    Background="Transparent"
                    HorizontalAlignment="Center"
                    Style="{StaticResource FeedOpButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon
                            Symbol="Like"
                            x:Name="like2"
                            x:Load="{x:Bind Liked2}"/>
                        <SymbolIcon
                            Symbol="Like"
                            x:Name="like1"
                            x:Load="{x:Bind Liked}"
                            Foreground="{ThemeResource SystemControlBackgroundAccentBrush}"/>
                        <TextBlock
                            Margin="3,0"
                            Text="{x:Bind Likenum,Mode=OneWay}"/>
                    </StackPanel>
                </Button>
                <Button
                    Padding="8,0"
                    Tag="{x:Bind Id}"
                    Background="Transparent"
                    HorizontalAlignment="Center"
                    Style="{StaticResource FeedOpButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Symbol="Comment"/>
                        <TextBlock
                            Margin="3,0"
                            Text="{x:Bind Replynum}"/>
                    </StackPanel>
                    <Button.Flyout>
                        <Flyout Opened="Flyout_Opened_1">
                            <Flyout.FlyoutPresenterStyle>
                                <Style TargetType="FlyoutPresenter">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="MinWidth" Value="300"/>
                                    <Setter Property="MinHeight" Value="200"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="ScrollViewer.VerticalScrollMode" Value="Disabled"/>
                                    <Setter Property="ScrollViewer.HorizontalScrollMode" Value="Disabled"/>
                                    <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Disabled"/>
                                    <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
                                </Style>
                            </Flyout.FlyoutPresenterStyle>
                            <Frame x:Name="replyFlyoutFrame"/>
                        </Flyout>
                    </Button.Flyout>
                </Button>
                <Button
                    Height="34"
                    Padding="2"
                    Tag="{x:Bind}"
                    Content="查看会话"
                    Foreground="Gray"
                    Background="Transparent"
                    HorizontalAlignment="Center"
                    Tapped="replyRowsItem_Tapped"
                    Style="{StaticResource ButtonRevealStyle}"/>
            </StackPanel>
            
            <ListView
                Grid.Row="3"
                Grid.Column="1"
                Margin="0,4,8,8"
                x:Name="replyRows"
                BorderThickness="1"
                x:Load="{x:Bind ShowReplyRows}"
                ItemsSource="{x:Bind ReplyRows}"
                Windows10version1809:CornerRadius="8"
                Style="{StaticResource ListViewStyle}"
                ScrollViewer.VerticalScrollMode="Disabled"
                Background="{ThemeResource SystemControlBackgroundListLowBrush}"
                BorderBrush="{ThemeResource SystemControlBackgroundBaseLowRevealBorderBrush}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter
                            Property="HorizontalContentAlignment"
                            Value="Stretch"/>
                        <Setter
                            Property="Style"
                            Value="{StaticResource NoPaddingListViewItem}"/>
                        <Setter
                            Property="Template"
                            Value="{StaticResource ListViewItemTemplate1}"/>
                    </Style>
                </ListView.ItemContainerStyle>
                
                <ListView.Footer>
                    <ListViewItem
                        Tag="{x:Bind}"
                        x:Name="replyRowsMore"
                        Tapped="replyRowsItem_Tapped"
                        x:Load="{x:Bind ShowReplyRowsMore}"
                        Style="{StaticResource NoPaddingListViewItem}"
                        Template="{StaticResource ListViewItemTemplate1}">
                        <StackPanel
                            Margin="4,0"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                            <TextBlock
                                Text="查看全部回复("
                                Foreground="Gray"/>
                            <TextBlock
                                Foreground="Gray"
                                Text="{x:Bind Replynum}"/>
                            <TextBlock
                                Text=")"
                                Foreground="Gray"/>
                        </StackPanel>
                    </ListViewItem>
                </ListView.Footer>
                
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:SimpleFeedReplyViewModel">
                        <control:MTextBlock
                            Margin="4,0"
                            VerticalAlignment="Center"
                            MessageText="{x:Bind Message}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </DataTemplate>

